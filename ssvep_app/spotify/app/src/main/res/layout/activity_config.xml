<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bci.smarthome.MainActivity">

    <!-- Here are the existing layout elements, now wrapped in
         a CoordinatorLayout -->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1"
            >

            <TextView
                android:id="@+id/ipText"
                android:layout_width="113dp"
                android:layout_height="40dp"
                android:text="IP-Addresse:"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintBottom_toTopOf="@+id/portText"
                app:layout_constraintRight_toLeftOf="@+id/ipEdit" />

            <EditText
                android:id="@+id/ipEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/portEdit"
                app:layout_constraintRight_toLeftOf="@+id/spotifyText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">

            <TextView
                android:id="@+id/portText"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="Port:"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintBottom_toTopOf="@+id/topicText"
                app:layout_constraintRight_toLeftOf="@+id/portEdit" />

            <EditText
                android:id="@+id/portEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/topicEdit"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/ipEdit"
                app:layout_constraintRight_toRightOf="@+id/ipEdit"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">

            <TextView
                android:id="@+id/topicText"
                android:layout_width="114dp"
                android:layout_height="40dp"
                android:text="MQTT-Topic:"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/topicEdit"
                app:layout_constraintRight_toLeftOf="@+id/topicEdit"
                app:layout_constraintTop_toTopOf="@+id/topicEdit"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintTop_creator="1" />

            <EditText
                android:id="@+id/topicEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintLeft_toLeftOf="@+id/portEdit"
                app:layout_constraintRight_toRightOf="@+id/portEdit"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height = "0dp"
            android:layout_weight = "1">

            <TextView
                android:id="@+id/spotifyText"
                android:layout_width="140dp"
                android:layout_height="39dp"
                android:text="Spotify-Account:"
                android:textAppearance="@android:style/TextAppearance.Medium"
                app:layout_constraintBottom_toTopOf="@+id/logoutButton"
                app:layout_constraintRight_toLeftOf="@+id/logoutButton"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintRight_creator="1" />

            <Button
                android:id="@+id/loginButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Login"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toRightOf="@+id/portEdit"
                app:layout_constraintRight_toLeftOf="@+id/logoutButton"
                app:layout_constraintTop_toBottomOf="@+id/spotifyText" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logout"
                app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
                app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintRight_creator="1" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="73dp" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:text="Next"
        app:layout_anchor="@+id/tableLayout"
        app:layout_anchorGravity="bottom|right"
        app:layout_constraintRight_toRightOf="@+id/constraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />
</android.support.design.widget.CoordinatorLayout>
